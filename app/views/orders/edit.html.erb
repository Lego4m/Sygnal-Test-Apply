<div class="flex flex-col items-center">
  <%= form_with model: @order,
    class: "flex flex-col gap-4 w-[100%] max-w-sm" do |form| 
  %>
    <h1 class="font-bold text-2xl text-center">
      Edit Order
    </h1>

    <div class="flex flex-col">
      <%= form.label :description, 
        class: "text-sm" 
      %>

      <%= form.text_field :description,
        class: "border-gray-300 rounded",
        placeholder: 'Description' 
      %>
    </div>

    <div>
      <%= form.select 'status', 
        Order.statuses.transform_keys { |key| key.titleize },
        {},
        class: "w-[100%] border-gray-300 rounded"
      %>
    </div>

    <%= form.submit 'Update',
      class:  "bg-blue-600 text-white font-bold p-2 rounded"
    %>
  <% end%>
</div>